<%- include("partials/header"); -%>

<div class="container blogs mt-5">
  <div class="container box text-center heading">
    <h3>Your Schedule</h3>
  </div>
  <div class="box">
    <% if(newMeetings.length>0){ %>
      <% newMeetings.forEach((newMeeting)=>{ %>
        <form action="/delete" method="post">
          <input type="checkbox" name="checkbox" value="<%=newMeeting._id%>" onChange="this.form.submit()">
          <p class="mb-0 fw-bold"><%=newMeeting.title%></p>
          <p class="mt-0 mb-0 fw-bold text-secondary"><%=newMeeting.details%></p>
          <a href="https://<%=newMeeting.eventId%>" class="mt-0 fw-bold text-secondary"><%=newMeeting.eventId%></a>
        </form>
      <% }) %>
    <% } else{ %>
      <h5 class="text-center text-muted">Yo!! No schedule Today</h5>
    <% } %>
  </div>
</div>

<%- include("partials/footer"); -%>
